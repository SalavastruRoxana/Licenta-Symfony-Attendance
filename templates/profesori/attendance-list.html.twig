{% extends "layouts/professor-grid.html.twig" %}
{% block title %} Profil {% endblock %}


{% block content_centru %}

    <h3>Liste prezente</h3>

    {% if  list  %}


            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Clasa</th>
                    <th scope="col">Materia</th>
                    <th scope="col">Data</th>
                    <th scope="col">Data</th>
                    <th scope="col"></th>

                </tr>
                </thead>

                <tbody>
                {% for a in list %}
                        <tr>
                            <th scope="row">
                                {{ a.class }}
                            </th>
                            <td>
                                {{ a.subject }}
                            </td>
                            <td>
                                {{ a.date }}
                            </td>
                            <td>
                                <a href="/profs/attendanceList/{{ a.id }}" role="button" class="btn btn-primary" data-id="{{ a.id }}">Vezi</a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
    {% else %}

    <h5>Nu aveti facuta nici o prezenta</h5>

    {% endif %}

{% endblock %}


